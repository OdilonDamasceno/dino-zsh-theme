#/usr/bin/sh

cp ./src/dino.zsh-theme /home/$USER/.oh-my-zsh/themes

cp "./fonts/Noto Emoji Nerd Font Complete.ttf" "/home/$USER/.local/share/fonts"

fc-cache

echo "##################################################################"
echo "####              NOW CHANGE THE THEME                        ####"
echo "####             Edit the file ~/.zshrc                       ####"
echo "####                ZSH_THEME=\"dino\"                          ####"
echo "####               and look the magic                         ####"
echo "##################################################################"
